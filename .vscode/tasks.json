{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Deploy Supabase Functions",
			"type": "shell",
			"command": "npx",
			"args": [
				"supabase",
				"functions",
				"deploy",
				"persona-chat"
			]
		},
		{
			"label": "Set Gemini Secret",
			"type": "shell",
			"command": "npx",
			"args": [
				"supabase",
				"secrets",
				"set",
				"GEMINI_API_KEY=<your-api-key>"
			]
		}
	]
}